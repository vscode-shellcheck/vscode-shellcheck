{
    "name": "shellcheck",
    "displayName": "shellcheck",
    "description": "An extension to use shellcheck in vscode",
    "version": "0.1.0",
    "publisher": "timonwong",
    "categories": [
        "Languages",
        "Linters"
    ],
    "homepage": "https://github.com/timonwong/vscode-shellcheck",
    "private": true,
    "repository": {
        "type": "git",
        "url": "https://github.com/timonwong/vscode-shellcheck.git"
    },
    "engines": {
        "vscode": "^1.13.0"
    },
    "activationEvents": [
        "onLanguage:shellscript"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "title": "ShellCheck",
            "properties": {
                "shellcheck.enable": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether shellcheck is enabled or not."
                },
                "shellcheck.executablePath": {
                    "type": "string",
                    "default": "shellcheck",
                    "description": "Path to the shellcheck executable."
                },
                "shellcheck.run": {
                    "type": "string",
                    "enum": [
                        "onSave",
                        "onType"
                    ],
                    "default": "onType",
                    "description": "Whether shellcheck is run on save or on type."
                },
                "shellcheck.exclude": {
                    "type": "array",
                    "default": [],
                    "description": "Exclude types of warnings, for example [\"SC1090\"]."
                },
                "shellcheck.customArgs": {
                    "type": "array",
                    "default": [],
                    "description": "Custom arguments to shellcheck"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/node": "^6.0.50",
        "@types/mocha": "^2.2.32",
        "typescript": "^2.1.5",
        "vscode": "^1.1.5",
        "mocha": "^2.3.3"
    }
}
