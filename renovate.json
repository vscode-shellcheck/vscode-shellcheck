{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "dependencyDashboard": true,
  "rangeStrategy": "bump",
  "semanticCommits": "enabled",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "description": "Automerge non-major dev updates",
      "matchDepTypes": ["devDependencies", "volta", "action"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchDepTypes": ["dependencies"],
      "semanticCommitType": "build"
    },
    {
      "matchDepTypes": ["devDependencies", "volta"],
      "semanticCommitType": "build",
      "semanticCommitScope": "deps-dev"
    },
    {
      "matchUpdateTypes": ["lockFileMaintenance"],
      "semanticCommitType": "build",
      "semanticCommitScope": "deps-dev"
    },
    {
      "matchDepTypes": ["action"],
      "semanticCommitType": "ci"
    },
    {
      "description": "Disable engine updates",
      "matchDepTypes": ["engines"],
      "enabled": false
    },
    {
      "description": "Disable minor updates for @types/vscode",
      "matchPackageNames": ["@types/vscode"],
      "matchUpdateTypes": ["major", "minor"],
      "enabled": false
    },
    {
      "description": "Disable major updates for @types/node",
      "matchPackageNames": ["@types/node"],
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ]
}
