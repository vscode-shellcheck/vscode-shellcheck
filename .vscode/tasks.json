{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "build:watch",
      "problemMatcher": ["$ts-webpack-watch"],
      "isBackground": true,
      "presentation": {
        "reveal": "silent"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "npm",
      "script": "build:all:watch",
      "problemMatcher": ["$ts-webpack-watch", "$tsc-watch"],
      "isBackground": true,
      "presentation": {
        "reveal": "silent"
      },
      "group": "build"
    }
  ]
}
